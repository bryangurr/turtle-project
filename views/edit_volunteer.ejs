<!DOCTYPE html>
<html lang="en">
    <link rel="icon" href="/1507115.png" type="image/png">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Volunteer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #004d40, #66bb6a);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            height: auto;
        }

        .form-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 400px;
            max-width: 100%;
            text-align: center;
        }

        .form-box h1 {
            margin-bottom: 20px;
            color: #004d40;
        }

        .form-box label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
            color: #333;
        }

        .form-box input[type="text"], 
        .form-box input[type="email"], 
        .form-box input[type="tel"], 
        .form-box input[type="number"], 
        .form-box select {
            width: calc(100% - 20px); /* Centered input fields */
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .form-box input[type="checkbox"] {
            margin-bottom: 20px;
        }

        .form-box button {
            background-color: #66bb6a;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-box button:hover {
            background-color: #004d40;
        }

        /* Delete Button Styling */
        .form-box .btn.delete {
            background-color: #e57373;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-box .btn.delete:hover {
            background-color: #d32f2f; /* Darker red on hover */
        }

        /* Button Container */
        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px; /* Spacing between buttons */
            margin-top: 20px;
        }

        @media (max-height: 600px) {
            .form-box {
                margin-top: 10px; 
            }
        }   
    </style>
</head>
<body>
    <div class="form-box">
        <h1>Edit Volunteer</h1>
        <form action="/edit_volunteer/<%= volunteer.id %>" method="POST">
            <input type="hidden" name="id" value="<%= volunteer.id %>">
            
            <label for="vol_first_name">First Name</label>
            <input type="text" id="vol_first_name" name="vol_first_name" value="<%= volunteer.vol_first_name %>" required>

            <label for="vol_last_name">Last Name</label>
            <input type="text" id="vol_last_name" name="vol_last_name" value="<%= volunteer.vol_last_name %>" required>

            <label for="phone">Phone</label>
            <input type="text" id="phone" name="phone" value="<%= volunteer.phone %>" required>
            
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= volunteer.email %>" required>

            <label for="vol_address">Street Address</label>
            <input type="text" id="vol_address" name="vol_address" value="<%= volunteer.vol_address %>" required>

            <label for="city">City</label>
            <input type="text" id="city" name="city" value="<%= volunteer.city %>" required>

            <label for="state">State</label>
            <input type="text" id="state" name="state" value="<%= volunteer.state %>" required>

            <label for="num_vol_hours">Monthly Volunteer Hours</label>
            <input type="number" id="num_vol_hours" name="num_vol_hours" value="<%= volunteer.est_vol_hours %>" required>

            <label for="how_did_you_hear_id">How did you hear about us?</label>
            <select id="how_did_you_hear_id" name="how_did_you_hear_id">
                <% how_did_you_hear.forEach(item => { %>
                    <option value="<%= item.how_did_you_hear_id %>" <%= item.how_did_you_hear_id === volunteer.how_did_you_hear_id ? 'selected' : '' %>>
                        <%= item.description %>
                    </option>
                <% }) %>
            </select>

            <label for="sewing_level">Sewing Level</label>
            <select id="sewing_level" name="sewing_level">
                <% sewing_level.forEach(level => { %>
                    <option value="<%= level.sewing_level %>" <%= level.sewing_level === volunteer.sewing_level ? 'selected' : '' %>>
                        <%= level.description %>
                    </option>
                <% }) %>
            </select>
            
            <label for="teach_sewing">Are you willing to teach sewing at events?</label>
            <input type="checkbox" id="teach_sewing" name="teach_sewing" value="true" <%= volunteer.teach_sewing ? 'checked' : '' %>>

            <label for="lead_event">Are you willing to take the lead at events?</label>
            <input type="checkbox" id="lead_event" name="lead_event" value="true" <%= volunteer.lead_event ? 'checked' : '' %>>

            <div class="button-container">
                <button type="submit">Submit</button>
                <form action="/delete_volunteer/<%= volunteer.id %>" method="POST" style="display: inline;">
                    <button class="btn delete" type="submit" onclick="return confirm('Are you sure you want to delete this volunteer?');">Delete</button>
                </form>
            </div>
        </form>
    </div>
</body>
</html>
