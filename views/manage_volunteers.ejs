<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Volunteers</title>
    <style>
        body {
            font-family: Futura, sans-serif;
            margin: 0;
            background-color: #f5f5f5;
            padding: 20px;
        }

        h1 {
            color: #004d40;
            text-align: center;
            margin-bottom: 20px;
        }

        .header-buttons {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 14px;
            color: white;
            background-color: #66bb6a;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #004d40;
        }

        .table-container {
            margin: 0 auto;
            width: 90%;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #66bb6a;
            color: white;
        }

        td {
            font-size: 14px;
            color: #333;
        }

        .btn.edit {
            background-color: #66bb6a;
        }

        .btn.edit:hover {
            background-color: #004d40;
        }

        .btn.delete {
            background-color: #e57373;
        }

        .btn.delete:hover {
            background-color: #d32f2f;
        }

        select {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #e0e0e0;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="header-buttons">
        <a href="/employee_home" class="btn">Return to Home</a>
    </div>

    <h1>Manage Volunteers</h1>
    
    <div class="table-container">
        <!-- Sort Dropdown -->
        <div>
            <label for="sort">Sort Existing Volunteers</label>
            <select id="sort" name="sort">
                <option value="city">City (Alphabetical)</option>
                <option value="sewing_level">Sewing Experience</option>
                <option value="num_vol_hours">Number of Volunteer Hours</option>
            </select>
            <div class="header-buttons">
                <a href="/volunteer" class="btn">Add a Volunteer</a>
            </div>
        </div>
        
        <!-- Volunteers Table -->
        <table>
            <thead>
                <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone</th>
                    <th>How I heard about it</th>
                    <th>Sewing Experience</th>
                    <th>Lead Event?</th>
                    <th>Teach Sewing?</th>
                    <th>Number of Volunteer Hours</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% volunteers.forEach(volunteer => { %>
                    <tr>
                        <td><%= volunteer.email %></td>
                        <td><%= volunteer.vol_first_name %></td>
                        <td><%= volunteer.vol_last_name %></td>
                        <td><%= volunteer.vol_address %></td>
                        <td><%= volunteer.city %></td>
                        <td><%= volunteer.state %></td>
                        <td><%= volunteer.phone %></td>
                        <td><%= volunteer.how_did_you_hear_id %></td>
                        <td><%= volunteer.sewing_level %></td>
                        <td><%= volunteer.lead_event == 'Y' ? 'Y' : 'N' %>%></td>
                        <td><%= volunteer.teach_sewing == 'Y' ? 'Y' : 'N' %></td>
                        <td><%= volunteer.num_vol_hours %></td>
                        <td>
                            <form action="/edit_volunteer/<%= volunteer.id %>" method="GET" style="display: inline;">
                                <button class="btn edit" type="submit">Edit</button>
                            </form>
                            <form action="/delete_volunteer/<%= volunteer.id %>" method="POST" style="display: inline;">
                                <button class="btn delete" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
