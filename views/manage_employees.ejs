<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Employees</title>
    <style>
        body {
            font-family: Futura, sans-serif;
            margin: 0;
            background-color: #f5f5f5;
            padding: 20px;
        }

        h1 {
            color: #004d40;
            text-align: center;
            margin-bottom: 20px;
        }

        .header-buttons {
            display: flex;
            justify-content: flex-start;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 14px;
            color: white;
            background-color: #66bb6a;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #004d40;
        }

        .table-container {
            margin: 0 auto;
            width: 90%;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #66bb6a;
            color: white;
        }

        td {
            font-size: 14px;
            color: #333;
        }

        .btn.edit {
            background-color: #66bb6a;
        }

        .btn.edit:hover {
            background-color: #004d40;
        }

        .btn.delete {
            background-color: #e57373;
        }

        .btn.delete:hover {
            background-color: #d32f2f;
        }

        select {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #e0e0e0;
            font-size: 14px;
        }

        .add-event-btn {
            margin-top: 20px;
            margin-left: 4%;
            display: block;
            padding: 10px 20px;
            background-color: #66bb6a;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-event-btn:hover {
            background-color: #004d40;
        }
    </style>

</head>

<body>
    <!-- Header Section -->

    <div class="header-buttons">
        <a href="/employee_home" class="btn">Return to Dashboard</a>
    </div>


    <!-- Title -->
    <div class="table-container">
        <h1>Manage Admin Accounts</h1>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username (Email)</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% admins.forEach(admin=> { %>
                    <tr>
                        <td>
                            <%= admin.first_name %> <%= admin.last_name %>
                        </td>
                        <td>
                            <%= admin.username %>
                        </td>
                        <td>
                            <%= admin.phone %>
                        </td>
                        <td>
                            <form action="/edit_employee/<%=admin.id%>" method="GET" style="display: inline;">
                                <button class="btn edit" type="submit">Edit</button>
                            </form>
                            <form action="/delete_employee/<%=admin.id%>" method="POST" style="display: inline;">
                                <button class="btn delete" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

        <!-- Add Employee Button -->

    </div>
    <form action="/create_employee" method="GET">
        <button class="add-event-btn" type="submit">Add Admin</button>
    </form>
</body>

</html>